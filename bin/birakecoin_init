#!/bin/bash

set -ex

# This shouldn't be in the Dockerfile or containers built from the same image
# will have the same credentials.
if [ ! -e "$HOME/.birakecoin/birakecoin.conf" ]; then
    mkdir -p $HOME/.birakecoin

    echo "Creating birakecoin.conf"

    # Seed a random password for JSON RPC server
    cat <<EOF > $HOME/.birakecoin/birakecoin.conf
testnet=${TESTNET:-0}
disablewallet=${DISABLEWALLET:-0}
printtoconsole=${PRINTTOCONSOLE:-1}
addressindex=${ADDRESSINDEX:-1}
txindex=${TXINDEX:-1}
server=${SERVER:-1}
rpcclienttimeout=${RPCCLIENTTIMEOUT:-30}
rpcport=${RPCPORT:-9998}
rpcuser=${RPCUSER:-birakecoinrpc}
rpcpassword=${RPCPASSWORD:-`dd if=/dev/urandom bs=33 count=1 2>/dev/null | base64`}
EOF

fi

cat $HOME/.birakecoin/birakecoin.conf

echo "Initialization completed successfully"

#