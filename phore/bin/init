#!/bin/bash

set -ex

if [ ! -e "$HOME/.phore/phore.conf" ]; then
    mkdir -p $HOME/.phore

    echo "Creating phore.conf"

    # Seed a random password for JSON RPC server
    cat <<EOF > $HOME/.phore/phore.conf
testnet=${TESTNET:-0}
disablewallet=${DISABLEWALLET:-0}
printtoconsole=${PRINTTOCONSOLE:-1}
addressindex=${ADDRESSINDEX:-1}
txindex=${TXINDEX:-1}
server=${SERVER:-1}
rpcclienttimeout=${RPCCLIENTTIMEOUT:-30}
rpcport=${RPCPORT:-1352}
rpcuser=${RPCUSER: phorerpc}
rpcpassword=${RPCPASSWORD:-u7SV2ApjNmaiF5Y037h58CpWBGZLBDGULsYqzf6/nJdK}
EOF

fi

cat $HOME/.phore/phore.conf

echo "Initialization completed successfully"

#