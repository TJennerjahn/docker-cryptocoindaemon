#!/bin/bash

set -ex

if [ ! -e "$HOME/.bitcoin-sv/bitcoin-sv.conf" ]; then
    mkdir -p $HOME/.bitcoin-sv

    echo "Creating bitcoin-sv.conf"

    # Seed a random password for JSON RPC server
    cat <<EOF > $HOME/.bitcoin-sv/bitcoin-sv.conf
testnet=${TESTNET:-0}
disablewallet=${DISABLEWALLET:-0}
printtoconsole=${PRINTTOCONSOLE:-1}
addressindex=${ADDRESSINDEX:-1}
txindex=${TXINDEX:-1}
server=${SERVER:-1}
rpcclienttimeout=${RPCCLIENTTIMEOUT:-30}
rpcport=${RPCPORT:-1359}
rpcuser=${RPCUSER: inviewrpc-svrpc}
rpcpassword=${RPCPASSWORD:-u7SV2ApjNmaiF5Y037h58CpWBGZLBDGULsYqzf6/nJdK}
EOF

fi

cat $HOME/.bitcoin-sv/bitcoin-sv.conf

echo "Initialization completed successfully"

#